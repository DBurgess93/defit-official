
<%# Signed In? Displays a log out navbar vs Signed in navbar for landing %>

<% if user_signed_in?  %>
  <div class="container-nav-simple">
    <div class="title-nav">
      <%# <h2>optional</h2> %>
    </div>
    <div class="nav-options-simple">
      <h3><%= link_to "log out", destroy_user_session_path, data: {turbo_method: :delete},
      class: "dropdown-item"  %></h3>
    </div>
  </div>
  <% else %>
  <div class="container-nav-simple">
    <div class="title-nav">
      <%# <h2>optional</h2> %>
    </div>
    <div class="nav-options-simple">
      <h3><%= link_to "sign up", new_user_registration_path, class: "nav-link" %></h3>
    </div>
  </div>
<% end %>
